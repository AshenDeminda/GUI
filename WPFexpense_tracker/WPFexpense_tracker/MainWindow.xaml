<Window x:Class="WPFexpense_tracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Grid.Column="0" Background="#2D2D2D">
            <TextBlock Text="Balance Buddy" Foreground="White" FontSize="24" Margin="10"/>
            <StackPanel Margin="10">
                <TextBlock Text="John Doe" Foreground="White" FontSize="18"/>
                <TextBlock Text="Software Developer" Foreground="Gray" FontSize="14"/>
                <TextBlock Text="john.doe@example.com" Foreground="Gray" FontSize="14"/>
                <TextBlock Text="28 years old" Foreground="Gray" FontSize="14"/>
                <TextBlock Text="New York, USA" Foreground="Gray" FontSize="14"/>
            </StackPanel>

            <!-- Navigation Links -->
            <StackPanel Margin="10">
                <Button Content="Dashboard" Margin="5" Background="#2563eb" Foreground="White" Click="NavigateToDashboard"/>
                <Button Content="Add Record" Margin="5" Background="#2563eb" Foreground="White" Click="NavigateToAddRecord"/>
                <Button Content="Reports" Margin="5" Background="#2563eb" Foreground="White" Click="NavigateToReports"/>
                <Button Content="Settings" Margin="5" Background="#2563eb" Foreground="White" Click="NavigateToSettings"/>
            </StackPanel>
        </StackPanel>

        <!-- Main Content -->
        <Frame Grid.Column="1" Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>