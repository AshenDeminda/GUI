<Window x:Class="Balance_Buddy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Balance Buddy" Height="600" Width="900" WindowStartupLocation="CenterScreen"
        Background="#F4F6F9">
    <Grid>
        <DockPanel>
            <!-- Navigation Bar (Initially Hidden) -->
            <StackPanel x:Name="NavigationBar" DockPanel.Dock="Top" Background="#1E90FF" Orientation="Horizontal" Height="60" Visibility="Collapsed">
                <Button Content="Dashboard" Width="100" Height="40" Margin="10,10,0,10" 
                        Background="#4682B4" Foreground="White" FontWeight="Bold" BorderThickness="0"
                        Cursor="Hand" Click="NavigateDashboard_Click"/>
                <Button Content="Add Record" Width="100" Height="40" Margin="10,10,0,10" 
                        Background="#4682B4" Foreground="White" FontWeight="Bold" BorderThickness="0"
                        Cursor="Hand" Click="NavigateAddRecord_Click"/>
                <Button Content="Reports" Width="100" Height="40" Margin="10,10,0,10" 
                        Background="#4682B4" Foreground="White" FontWeight="Bold" BorderThickness="0"
                        Cursor="Hand" Click="NavigateReports_Click"/>
                <Button Content="Settings" Width="100" Height="40" Margin="10,10,0,10" 
                        Background="#4682B4" Foreground="White" FontWeight="Bold" BorderThickness="0"
                        Cursor="Hand" Click="NavigateSettings_Click"/>
            </StackPanel>

            <!-- Main Frame -->
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Background="#F4F6F9"/>
        </DockPanel>
    </Grid>
</Window>