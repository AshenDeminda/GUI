<Page x:Class="Balance_Buddy.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Balance_Buddy"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Dashboard">

    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Balance Buddy" FontSize="30" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBlock Text="Monthly Income: $2,500.00" FontSize="16" Margin="0,0,0,10"/>
            <TextBlock Text="Monthly Expenses: $1,750.00" FontSize="16" Margin="0,0,0,10"/>
            <TextBlock Text="Total Balance: $3,250.00" FontSize="16" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Page>
