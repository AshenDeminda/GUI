<Page x:Class="Balance_Buddy.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Login" 
      Height="600" 
      Width="900"
      Background="#F4F6F9">
    <Grid>
        <Border Width="400" Height="500" Background="White" CornerRadius="10" Padding="30">
            <StackPanel>
                <TextBlock Text="Balance Buddy" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,30" 
                           Foreground="#2B2D42"/>

                <!-- Email -->
                <TextBlock Text="Email" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="EmailTextBox" 
                         Height="40" 
                         Margin="0,0,0,20" 
                         Padding="10"/>

                <!-- Password -->
                <TextBlock Text="Password" FontWeight="Bold" Margin="0,0,0,5"/>
                <PasswordBox x:Name="PasswordBox" 
                             Height="40" 
                             Margin="0,0,0,20" 
                             Padding="10"/>

                <!-- Login Button -->
                <Button Content="Login" 
                        Background="#2563EB" 
                        Foreground="White" 
                        Height="50" 
                        Width="340"
                        Click="Login_Click"/>

                <!-- Register Link -->
                <TextBlock Text="Don't have an account? Register" 
                           HorizontalAlignment="Center" 
                           Margin="0,20,0,0" 
                           Foreground="#2B2D42"
                           Cursor="Hand"
                           MouseLeftButtonDown="Register_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>