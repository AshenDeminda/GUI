<Page x:Class="Balance_Buddy.Signup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Signup" 
      Height="600" 
      Width="900">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\ASUS\Documents\GitHub\GUI\Background\bg 1_enhanced.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Border Width="400" Height="500" Background="#B3FFFFFF" CornerRadius="10" Padding="30" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Balance Buddy" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,30" 
                           Foreground="#2B2D42"/>

                <!-- Name -->
                <TextBlock Text="Name" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="NameTextBox" 
                         Height="40" 
                         Margin="0,0,0,20" 
                         Padding="10"
                         Background="#80FFFFFF"/>

                <!-- Email -->
                <TextBlock Text="Email" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="EmailTextBox" 
                         Height="40" 
                         Margin="0,0,0,20" 
                         Padding="10"
                         Background="#80FFFFFF"/>

                <!-- Password -->
                <TextBlock Text="Password" FontWeight="Bold" Margin="0,0,0,5"/>
                <PasswordBox x:Name="PasswordBox" 
                             Height="40" 
                             Margin="0,0,0,20" 
                             Padding="10"
                             Background="#80FFFFFF"/>

                <!-- Confirm Password -->
                <TextBlock Text="Confirm Password" FontWeight="Bold" Margin="0,0,0,5"/>
                <PasswordBox x:Name="ConfirmPasswordBox" 
                             Height="40" 
                             Margin="0,0,0,20" 
                             Padding="10"
                             Background="#80FFFFFF"/>

                <!-- Signup Button -->
                <Button Content="Signup" 
                        Background="#2563EB" 
                        Foreground="White" 
                        Height="50" 
                        Width="340"
                        Click="Signup_Click"/>

                <!-- Login Link -->
                <TextBlock Text="Already have an account? Login" 
                           HorizontalAlignment="Center" 
                           Margin="0,20,0,0" 
                           Foreground="#2B2D42"
                           Cursor="Hand"
                           MouseLeftButtonDown="Login_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>